<!DOCTYPE html>
<html>
<head>
    <title>Call Manager</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:00px; }
        .contact-info{ align-content: center }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://cdn.dev.skype.com/uri/skype-uri.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#"><%=page_title%></a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/user_logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="col-md-6 contact-info">
        <h1>Información Del Contacto</h1>
        <p>Nombre: <%=data[0].name%></p>
        <p>Apellido: <%=data[0].last_name%></p>
        <p>Telefono: <%=data[0].phone%></p>
    </div>


    <div class="col-md-6 call-update">

        <a class="btn btn-large btn-primary" href="skype:+<%=data[0].phone%>?call" onclick="makeCall('<%=link%>')">Llamar</a>
        <h1>Opciones de llamada</h1>
        <form class="form-inline" action="/call/save/success/<%=data[0].idcontact%>" method="get">
            <button id="myBtn1" type="submit" class="btn btn-success" disabled><span class="fa fa-phone"></span> Exitosa</button>
        </form>
        <form class="form-inline" action="/call/save/noanswer/<%=data[0].idcontact%>" method="get">
            <button id="myBtn2" type="submit" class="btn btn-warning" disabled><span class="fa fa-phone"></span> No Contesta</button>
        </form>

        <form class="form-inline" action="/call/save/notexist/<%=data[0].idcontact%>" method="get">
            <button id="myBtn3" type="submit" class="btn btn-danger" disabled><span class="fa fa-phone"></span> No Existe</button>
        </form>
    </div>

</div>

<script>
function makeCall(x) {
    var win = window.open(x, '_blank');
    if (win) {
        //Browser has allowed it to be opened
        win.focus();
        document.getElementById("myBtn1").disabled = false;
        document.getElementById("myBtn2").disabled = false;
        document.getElementById("myBtn3").disabled = false;
    } else {
        //Browser has blocked it
        alert('Active los Pop-Ups para esta página');
    }
}
</script>

</body>
</html>