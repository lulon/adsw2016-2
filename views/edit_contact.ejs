        <div class="page-data">
            
            <form method="post" action="/contact/edit/<%=data[0].phone%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="name" value="<%=data[0].name%>" required></td>
                 </tr>
                <tr>
                    <td class="label">Last Name</td><td>: <input type="text" name="last_name" value="<%=data[0].last_name%>" required></td>
